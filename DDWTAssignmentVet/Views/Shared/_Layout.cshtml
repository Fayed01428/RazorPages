<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>VetCMS - UniSA STEM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        li.active.btn-warning a {
            color: #000;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand ms-3" href="/">VetCMS</a>

        <div class="container collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item btn @isActive("Index")">
                    <a class="nav-link" href="/Home/Index" title="View home page">Home</a>
                </li>
                <li class="nav-item btn @isActive("Owners")">
                    <a class="nav-link" href="/Owners/Index" title="View list of current pet owners">Owner List</a>
                </li>

                <li class="nav-item btn @isActive("Courses")">
                    <a class="nav-link" href="/Courses/Index" title="View list of past and current courses">Course List</a>
                </li>
                <li class="nav-item btn @isActive("Enrolments")">
                    <a href="#" class="nav-link" title="Active only when viewing enrolments in a course">Enrolments</a>
                </li>
                <li class="nav-item btn @isActive("About")">
                    <a href="/Home/About" class="nav-link" title="About VetCMS">About</a>
                </li>
                <li class="nav-item btn @isActive("Contact")">
                    <a href="/Home/Contact" class="nav-link" title="Contact VetCMS Team">Contact</a>
                </li>

            </ul>
        </div>
    </nav>
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
        <hr>

    </main>
    <footer class="container text-center">
        <p>&copy; @DateTime.Now.Year - UniSA STEM</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)

    @functions {

        public string isActive(string q)
        {
            string str = "";
            if (q == ViewBag.Active) { str = "active btn-warning"; }
            return str;
        }
    }

</body>
</html>
